        <img src="/<%= database[i].weather[j].icon %>.png" alt="<%= database[i].weather[0].icon %>-icon">
        <h3><%= database[i].weather[j].temp %> Â°C</h3>
        <p><%= database[i].weather[j].message %></p>
      </div>
      <%}%>
      <%}%>
      <%}%>
      <a href="/">
        <div class="btn">BACK</div>
      </a>
  </main>
</body>

</html>